#!/bin/bash

EA_PATH=$HOME/.emacs_anywhere

err () { echo -e "Error: $@" 1>&2; }

if [[ -e $EA_PATH/config ]]; then
    $EA_PATH/config
fi

case $OSTYPE in
    "darwin"*)
        $EA_PATH/bin/osx
        ;;
    "linux-gnu")
        $EA_PATH/bin/linux
        ;;
    *)
        err OS $OSTYPE isn\'t currently supported
        exit 1
        ;;
esac
